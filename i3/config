#### THEME ####


# set primary gruvbox colorscheme colors
set $bg #282828
set $bg2 #504945
set $red #cc241d
set $green #98971a
set $yellow #d79921
set $blue #458588
set $purple #b16286
set $aqua #689d68
set $gray #a89984
set $darkgray #1d2021


# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:DejaVu Sans Mono 9

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
    font pango:DejaVu Sans Mono, FontAwesome 9
    status_command i3status-rs
    tray_output primary
    colors {
        background           $bg
        statusline           $yellow

        #color class         border    back.     text
        focused_workspace    $green    $green    $darkgray
        inactive_workspace   $darkgray $darkgray $yellow
        active_workspace     $darkgray $darkgray $yellow
        urgent_workspace     $red      $red      $bg
    }
}

# green gruvbox
# class                 border     backgr     text       indicator  child_border
client.focused          $green     $green     $darkgray  $purple    $darkgray
client.focused_inactive $bg2       $darkgray  $yellow    $purple    $darkgray
client.unfocused        $bg2       $darkgray  $yellow    $purple    $darkgray
client.urgent           $red       $red       $white     $red       $red



